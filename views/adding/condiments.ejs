<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/ingredients.css">

<h1>Condiments</h1>
<a href="/addIngredients" class="lead">Back</a>

<form action="/addIngredients/condiments" method="POST">
    <div class="mt-3">
        <!-- Creating checkboxes for condiments -->
        <% condiments.forEach(function(condiment, i){ %>
        <div class="mt-2 d-inline-flex">
            <% if(inputCondimentsArr.indexOf(condiment) === -1){ %>
            <input type="checkbox" class="form-control btn-check" id="btn-check-outlined<%= i %>" autocomplete="off"
                name="ingredients" value="<%= condiment %>">
            <%} else {%>
            <input type="checkbox" class="form-control btn-check" id="btn-check-outlined<%= i %>" checked
                autocomplete="off" name="ingredients" value="<%= condiment %>">
            <% } %>
            <label class="btn btn-outline-dark" for="btn-check-outlined<%= i %>"><%= condiment %></label>
        </div>
        <% }); %>
    </div>

    <div class="mt-5">
        <button class="btn btn-dark btn-lg text-white">Submit</button>
    </div>
</form>
</div>