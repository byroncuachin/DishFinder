<% layout('/layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/ingredients.css">

<h1>Meat & Seafood</h1>
<a href="/addIngredients" class="lead">Back</a>

<form action="/addIngredients/meat" method="POST">
    <div class="mt-3">
        <!-- Creating checkboxes for meats -->
        <% meats.forEach(function(meat, i){ %>
        <div class="mt-2 d-inline-flex">
            <% if(inputMeatsArr.indexOf(meat) === -1){ %>
            <input type="checkbox" class="form-control btn-check" id="btn-check-outlined<%= i %>" autocomplete="off"
                name="ingredients" value="<%= meat %>">
            <%} else {%>
            <input type="checkbox" class="form-control btn-check" id="btn-check-outlined<%= i %>" checked
                autocomplete="off" name="ingredients" value="<%= meat %>">
            <% } %>
            <label class="btn btn-outline-dark" for="btn-check-outlined<%= i %>"><%= meat %></label>
        </div>
        <% }); %>
    </div>

    <div class="mt-5">
        <button class="btn btn-dark btn-lg text-white">Submit</button>
    </div>
</form>
</div>